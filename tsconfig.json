{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "dist/esm",
    "target": "ES2021",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"],
    "jsx": "react-jsx"
  },
  "include": ["src"]
}
